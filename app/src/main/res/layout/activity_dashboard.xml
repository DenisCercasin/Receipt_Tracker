<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground">

    <!-- 🖼️ Background image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_pattern"
        android:scaleType="centerCrop"
        android:alpha="0.56" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 🧭 Top App Bar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/moldova_background_theme"
            android:title="Dashboard"
            android:titleTextColor="@android:color/white"
            app:navigationIcon="@drawable/ic_menu" />

        <!-- 🧾 Centered Content without ScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 💸 Monthly Total Highlight -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@color/moldova_background_theme">

                <TextView
                    android:id="@+id/monthlyTotalText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp"
                    android:gravity="center"
                    android:text="This month you've already spent €0.00"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </com.google.android.material.card.MaterialCardView>

            <!-- 🔻 Here you can add the Scan/Add cards again -->

        </LinearLayout>

        <!-- 🔽 Bottom Nav -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/moldova_background_theme"
            app:menu="@menu/bottom_nav_menu"
            app:itemIconTint="@color/nav_icon_selector"
            app:itemTextColor="@color/black"
            app:itemIconSize="21dp"
            app:itemTextAppearanceActive="@style/BottomNavTextBold"
            app:itemTextAppearanceInactive="@style/BottomNavTextBold"
            app:itemBackground="@drawable/bottom_nav_item_background" />
    </LinearLayout>

    <!-- ☰ Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/drawer_header" />
</androidx.drawerlayout.widget.DrawerLayout>
